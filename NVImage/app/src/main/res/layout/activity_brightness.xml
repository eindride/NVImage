<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.crina.nvimage.brightnessActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="333dp"
        android:layout_height="433dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/crop"
        app:layout_constraintHorizontal_bias="0.509"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/seekBarBrightness"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/back1"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:onClick="xButtonAction"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/back2"
        app:srcCompat="@drawable/x" />

    <ImageButton
        android:id="@+id/back2"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:onClick="okButtonAction"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ok" />

    <SeekBar
        android:id="@+id/seekBarBrightness"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="283dp"
        android:layout_height="13dp"
        android:layout_marginRight="8dp"
        android:max="200"
        android:progress="100"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp" />
</android.support.constraint.ConstraintLayout>
